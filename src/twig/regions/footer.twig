<footer id="footer">

  <div class="footer-top">
    <div class="container">
      <div class="footer-logo">
        <img src="{{ logo }}" alt="{{ title }}" />
      </div>
      <div class="footer-text">
        <p>{{ footer.text }}</p>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container">    
      <div class="footer-menu">
        <ul>
          {% for item in menu %}
            <li>
              <a href="{{ item.link }}" title="{{ item.title }}">{{ item.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>

</footer>
